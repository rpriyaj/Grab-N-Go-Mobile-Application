<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/signup_btn_background"
    tools:context=".StoreMenuPage">

    <LinearLayout

        android:id="@+id/linearlayout"
        android:layout_width="416dp"
        android:layout_height="650dp"
        android:background="@drawable/background_customer_page"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/TimeSlot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="24dp"
                android:text="OPEN 08.00AM - 06.30PM"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/StoreName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="50dp"
                android:text="@string/store_name"
                android:textColor="#000000"
                android:textSize="40sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/SearchTab"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="160dp"
                android:background="@drawable/search_button"
                android:paddingStart="10dp"
                android:paddingTop="8dp"
                android:paddingEnd="230dp"
                android:paddingBottom="8dp"
                android:text="Search..."
                android:textAlignment="center"
                android:textColor="@color/translucent_gray2"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/SearchTab"
                android:layout_alignTop="@+id/SearchTab"
                android:layout_alignEnd="@+id/SearchTab"
                android:layout_alignBottom="@+id/SearchTab"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="317dp"
                android:layout_marginBottom="10dp"
                android:contentDescription="search icon"
                app:layout_constraintBottom_toBottomOf="@id/SearchTab"
                app:layout_constraintEnd_toStartOf="@id/SearchTab"
                app:layout_constraintStart_toStartOf="@id/SearchTab"
                app:layout_constraintTop_toTopOf="@id/SearchTab"
                app:srcCompat="@drawable/search_icon" />

            <androidx.cardview.widget.CardView
                android:id="@+id/MenuCard1"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="250dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="@color/logo_background">

                <TextView
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="175dp"
                    android:layout_marginTop="15dp"
                    android:text="Half Roasted Chicken"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="175dp"
                    android:layout_marginTop="40dp"
                    android:text="$10.00"
                    android:textSize="15dp"
                    android:textColor="#000000"/>

                <Button
                    android:id="@+id/IncreaseQty1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/orange_circle"
                    android:text="+"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="315dp"
                    android:layout_marginTop="65dp"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="270dp"
                    android:layout_marginTop="68dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/DecreaseQty1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/silver_circle"
                    android:text="-"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="240dp"
                    android:layout_marginTop="65dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/MenuCard2"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="370dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="@color/logo_background">

                <TextView
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="175dp"
                    android:layout_marginTop="15dp"
                    android:text="Roasted Chicken Rice"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="175dp"
                    android:layout_marginTop="40dp"
                    android:text="$3.50"
                    android:textSize="15dp"
                    android:textColor="#000000"/>

                <Button
                    android:id="@+id/IncreaseQty2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/orange_circle"
                    android:text="+"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="315dp"
                    android:layout_marginTop="65dp"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="270dp"
                    android:layout_marginTop="68dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/DecreaseQty2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/silver_circle"
                    android:text="-"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="240dp"
                    android:layout_marginTop="65dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
            android:id="@+id/MenuCard3"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="490dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="@color/logo_background">

            <TextView
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="175dp"
                android:layout_marginTop="15dp"
                android:text="Roasted Chicken Set Meal"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="175dp"
                android:layout_marginTop="40dp"
                android:text="$10.00"
                android:textSize="15dp"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/IncreaseQty3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/orange_circle"
                android:text="+"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textAlignment="center"
                android:layout_marginLeft="315dp"
                android:layout_marginTop="65dp"/>

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="68dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15dp" />

            <Button
                android:id="@+id/DecreaseQty3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/silver_circle"
                android:text="-"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textAlignment="center"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="65dp"/>

        </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/CartLogo"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="315dp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/add_to_cart"
        android:contentDescription="add to cart icon"/>

    <ImageView
        android:id="@+id/UserLogo"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="360dp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user_icon"
        android:contentDescription="user icon"/>

    <ImageView
        android:id="@+id/BackArrowLogo"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/left_arrow_icon"
        android:contentDescription="arrow" />

</androidx.constraintlayout.widget.ConstraintLayout>